<div class="container">
  <div class="row">
    <div class="col-md-6">
     <form action=""/task/{{task.id}}/edit" method="POST"">
            <label >Title:
              <input name="name" type="text" class="form-control" value="{{task.name}}">
              </label><br> 
                <label>Description:
                    <input type="textarea" name="description" class="form-control" value="{{task.description}}">
                </label><br>
                <label >Assigned To:
                     <input type="text" class="form-control" placeholder="Who to assign to">
                </label><br>
           <input type="submit" class="btn btn-primary" value="Submit">

     </form>

        <a class="btn btn-success" id= "submitBtn" href="/task/{{task.id}}/delete" role="button">Delete</a>
    </div>
  </div>
</div>